<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_bg_loading_dialog"
    android:gravity="center_horizontal"
    android:minHeight="@dimen/dp_100"
    android:minWidth="@dimen/dp_100"
    android:orientation="vertical">

    <ProgressBar
        android:id="@+id/pb_loading_progress"
        style="@style/style_loading__dialog_ProgressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="3" />

    <TextView
        android:id="@+id/tv_loading_dialog_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_4"
        android:layout_weight="2"
        android:ellipsize="end"
        android:gravity="center_horizontal"
        android:maxEms="8"
        android:maxLines="1"
        android:paddingLeft="@dimen/dp_4"
        android:paddingRight="@dimen/dp_4"
        android:textColor="@color/color_text_loading_dialog"
        android:textSize="@dimen/sp_14"
        tools:text="@string/loading" />
</LinearLayout>

